{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@screens/*": ["src/screens/*"],
      "@hooks/*": ["src/hooks/*"],
      "@app-types/*": ["src/types/*"],
      "@test-utils/*": ["src/test-utils/*"],
    }
  },
  "include": [
    "src/**/*",
    "App.tsx",
    "tsconfig.json"
  ]
}